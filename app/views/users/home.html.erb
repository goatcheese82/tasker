<% if session[:user_id] %>
  <h1><%= @user.first_name %> <%= @user.last_name%></h1><%= link_to "Edit Account", edit_user_path(@user)%>
  <h2>Email: <%= @user.email %></h2>
  <h2>Address: <%= @user.address%></h2>
  <h2>Phone Number: <%= @user.phone_number%></h2>
  <img src="<%= @user.image %>">

  <%= link_to('Logout', '/logout') %>
<% else %>
  <%= link_to('Sign up', '/users/new') %>
  <%= link_to('Log in with Facebook!', '/auth/facebook') %>
  <%= form_for @user, url: "/users/login" do |f| %>

  <div class="field"><%= f.label :name, "Select your name" %><br>
    <%= f.collection_select(:id, @users, :id, :name) %>
  </div>

  <div class="actions">
    <%= f.submit "Sign In"  %>
  </div>
<% end %>

<% end %>

