<% if session[:user_id] %>
  <h1><%= @current_user.first_name %> <%= @current_user.last_name%></h1><%= link_to "Edit Account", edit_user_path(@current_user)%>
  <h2>Email: <%= @current_user.email %></h2>
  <h2>Address: <%= @current_user.address%></h2>
  <h2>Phone Number: <%= @current_user.phone_number%></h2>
  <img src="<%= @current_user.image %>">

  <%= link_to('New Event', '/events/new') %>
  <br>

  <%#= render 'events/list'%>

  <br>

  <%= link_to('Logout', '/logout') %>


<% else %>
  <%= link_to('Sign up', '/users/new') %>
  <br>
  <%= link_to('Log in with Facebook!', '/auth/facebook') %>

  <%= form_for(:session, url: login_path) do |f| %>

  <div class="field">
    <%= f.label :email %>:
    <%= f.text_field :email %>
  </div>

  <div class="field">
  <%= f.label :password %>:
  <%= f.password_field :password %>

  <div class="actions">
    <%= f.submit "Sign In"  %>
  </div>
  <% end %>
<% end %>

